import random


# create a function
def guessNumber(number):
    """
    The user guess the number generated by the computer

    Args:
        number: the maximum limit marked for the number to be guessed
    """


    randomNumber = random.randint(1, number)  # random number between 1 and number.

    # The prediction is 0 initially so it doesn't match the random number.
    prediction = 0

    # Continue predicting the number until the prediction is correct.
    while prediction != randomNumber:
        # The user enters a number.
        prediction = int(input(f'\nGuess a number between 1 and  {number}: '))
        # If the number is less than the random number, display a message.
        if prediction < randomNumber:
            print('Try again. This number is small.')
        # If the number is greater than the random number, display a message.
        elif prediction > randomNumber:
            print('Try again. This number is too big.')

        # The loop stops when the user guesses the number correctly and a final message is displayed.
    print(f'\n\nCongratulations! You guessed the number {randomNumber} correctly.')

# call the function
guessNumber(50)
